# Rotate Rails application logs
/mnt/app/current/log/production.log {
  daily
  missingok
  dateext
  notifempty
  copytruncate
  postrotate
    rm -f /mnt/app/current/log/production.log.offset
    logfile=/mnt/app/current/log/production.log-`date +%Y%m%d`
    gzip $logfile
    /usr/local/ec2onrails/bin/archive_file.rb --file $logfile.gz
    rm $logfile.gz
  endscript
}
